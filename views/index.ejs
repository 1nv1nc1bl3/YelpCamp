<%- include partials/header -%>

<div class="container text-center">

    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-warning btn-lg" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Our most popular Campgrounds</h3>
        </div>
    </div>

    <div class="row">
        <% campgrounds.forEach(campground => { %>
        <div class="col-md-3 col-sm-6">
            <div>
                <img class="img-thumbnail" src="<%= campground.image %>" alt="campgound_image">
                <div>
                    <h4 class="figure-caption"><%= campground.name %></h4>
                </div>
                <p>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                </p>
            </div>
        </div>
        <% }) %>
    </div>

    <a href="/">Back to Landing Page</a><br>

    <%- include partials/footer -%>

</div>